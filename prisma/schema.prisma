generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Language {
  id             String    @id
  name           String    @unique
  extensions     String[]
  highlightAlias String
  snippets       Snippet[]
  trackedFiles   File[]
}

model File {
  id           String        @id @default(uuid())
  repository   String
  path         String
  languageId   String
  language     Language      @relation(fields: [languageId], references: [id])
  fileVersions FileVersion[]

  @@unique([repository, path])
}

model FileVersion {
  id        String    @id @default(uuid())
  sha       String
  commit    String
  createdAt DateTime  @default(now())
  parsedAt  DateTime?
  fileId    String
  file      File      @relation(fields: [fileId], references: [id])
  snippets  Snippet[]

  @@unique([fileId, sha])
}

model Snippet {
  id            String      @id @default(uuid())
  sha           String      @unique
  content       String
  languageId    String
  fileVersionId String
  language      Language    @relation(fields: [languageId], references: [id])
  fileVersion   FileVersion @relation(fields: [fileVersionId], references: [id])

  @@index([languageId])
}
